<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Soporte Técnico{% endblock %}</title>

        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
        
        <link href="{{ asset('styles/app.css') }}" rel="stylesheet"/>
    </head>
    <body>
        {% block body %}
            <div class="login-container">
                <h2>Iniciar sesión</h2>

                {% if error %}
                    <div class="error-message">
                        <p>{{ error }}</p>
                    </div>
                {% endif %}

                <form action="{{ path('app_login_verify') }}" method="post">
                    <input type="hidden" name="_method" value="PUT">
                    
                    <!-- Campo para el correo o nombre de usuario -->
                    <div class="form-group">
                        <label for="usernameOrEmail">Correo Electrónico o Nombre de Usuario:</label>
                        <input type="text" id="usernameOrEmail" name="usernameOrEmail" value="{{ last_username }}" required="required" />
                    </div>

                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" required="required" />
                    </div>
                    <button type="submit">Iniciar Sesión</button>
                </form>
            </div>
        {% endblock %}
    </body>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</html>
